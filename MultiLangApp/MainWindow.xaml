<Window x:Class="ClassicDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource WindowTitle}" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackground}"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Estilo Minimalista para Botones (Themed) -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CardHoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="BtnPrimary" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextContrast}"/>
            <Style.Triggers>
                 <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilos Inputs -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                         <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
             <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="CornerRadius" Value="8"/>
             <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Setter.Value>
             </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="20" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Classic" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="Downloader" FontSize="24" FontWeight="Light" Foreground="{DynamicResource TextSecondary}" Margin="5,0,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Settings -->
                <Button x:Name="BtnSettings" Content="&#xE713;" Click="BtnSettings_Click" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" Width="30" Height="30" Padding="0" FontSize="14" ToolTip="Settings" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondary}"/>

                <!-- Theme Toggles -->
                <!-- Theme Toggles REMOVED -->
                
                <!-- Lang Toggles -->
                <Button Content="EN" Click="BtnEnglish_Click" Margin="0,0,5,0" Width="30" Height="30" Padding="0" Background="Transparent" BorderThickness="0"/>
                <TextBlock Text="|" VerticalAlignment="Center" Foreground="{DynamicResource BorderColor}"/>
                <Button Content="ES" Click="BtnSpanish_Click" Margin="5,0,0,0" Width="30" Height="30" Padding="0" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Main Tabs -->
        <!-- Main Tabs -->
        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent" Padding="0" Margin="20,0,20,10">
            <TabControl.Resources>
                <!-- Card Style for Uniformity -->
                <Style x:Key="CardStyle" TargetType="Border">
                    <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="20"/>
                    <Setter Property="Effect">
                         <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="Black" Opacity="0.2"/>
                         </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="TabItem">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="FontSize" Value="15"/> <!-- Slightly smaller for cleaner look -->
                    <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,10,0"/> <!-- Less gap between tabs -->
                    <Setter Property="Padding" Value="13,10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid SnapsToDevicePixels="True" Background="Transparent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/> <!-- Text -->
                                        <RowDefinition Height="Auto"/> <!-- Indicator -->
                                    </Grid.RowDefinitions>
                                    
                                    <ContentPresenter x:Name="ContentSite"
                                                    Grid.Row="0"
                                                    ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                    
                                    <!-- Indicator Line: Separated logic for perfect control -->
                                    <Border x:Name="Indicator" 
                                            Grid.Row="1"
                                            Height="3" 
                                            Background="Transparent" 
                                            HorizontalAlignment="Stretch" 
                                            CornerRadius="1"
                                            Margin="20,0"/> 
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                        <Setter TargetName="Indicator" Property="Background" Value="{DynamicResource AccentColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- DOWNLOADER TAB -->
            <TabItem Header="{DynamicResource TabDownloader}">
                <Grid Margin="0,20">
                    <!-- STEP 1: INPUT (Centered Card) -->
                    <Grid x:Name="ViewDownloaderInput" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Style="{StaticResource CardStyle}" Width="600">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LabelUrl}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" HorizontalAlignment="Left"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtUrl" FontSize="15" Height="45" Padding="10" VerticalContentAlignment="Center" Tag="Paste URL here..." BorderBrush="{DynamicResource BorderColor}" Background="{DynamicResource AppBackground}" Foreground="{DynamicResource TextPrimary}"/>
                                    <Button x:Name="BtnAnalyze" Click="BtnAnalyze_Click" Content="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="18" Width="50" Height="45" Grid.Column="1" Margin="10,0,0,0" Style="{StaticResource BtnPrimary}"/>
                                </Grid>
                                
                                <TextBlock Text="{DynamicResource MsgSupportedPlatforms}" FontSize="12" Margin="0,15,0,0" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Opacity="0.7"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- STEP 2: LOADING -->
                    <Grid x:Name="ViewDownloaderLoading" Visibility="Collapsed" VerticalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center">
                             <!-- Windows 11 Style Modern Ring Spinner -->
                             <Grid Width="50" Height="50" RenderTransformOrigin="0.5,0.5">
                                <Grid.Resources>
                                    <Storyboard x:Key="ModernSpinAnimation" RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotate" 
                                                         Storyboard.TargetProperty="Angle" 
                                                         From="0" To="360" Duration="0:0:1" />
                                    </Storyboard>
                                </Grid.Resources>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Grid.Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource ModernSpinAnimation}"/>
                                    </EventTrigger>
                                </Grid.Triggers>
                                <Grid.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                                </Grid.RenderTransform>

                                <!-- Track (Subtle Gray Ring) -->
                                <Ellipse Width="46" Height="46" Stroke="{DynamicResource BorderColor}" StrokeThickness="4" Opacity="0.3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                
                                <!-- Active Arc (Accent Color, 270 degrees) -->
                                <Path Data="M 25,2 A 23,23 0 1 1 2,25" 
                                      Stroke="{DynamicResource AccentColor}" 
                                      StrokeThickness="4" 
                                      StrokeEndLineCap="Round"
                                      Margin="0"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                </Path>
                             </Grid>
                             
                             <TextBlock Text="{DynamicResource MsgProcessing}" Margin="0,30,0,0" FontSize="18" HorizontalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>
                    </Grid>

                    <!-- STEP 3: OPTIONS -->
                    <Grid x:Name="ViewDownloaderOptions" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="900">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/> <!-- Thumbnail Side -->
                            <ColumnDefinition Width="40"/>  <!-- Gap -->
                            <ColumnDefinition Width="*"/>   <!-- Options Side -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Video Info Card -->
                        <Border Style="{StaticResource CardStyle}" VerticalAlignment="Top">
                            <StackPanel>
                                <Border CornerRadius="6" ClipToBounds="True" Margin="0,0,0,15" Background="Black">
                                    <Image x:Name="ImgThumb" Height="160" Stretch="UniformToFill"/>
                                </Border>
                                <TextBlock x:Name="LblTitle" Text="Video Title" TextWrapping="Wrap" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="LblUploader" Text="Channel Name" Foreground="{DynamicResource AccentColor}" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="LblDuration" Text="Duration: 10:05" Foreground="{DynamicResource TextSecondary}" FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <!-- Actions Card -->
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" VerticalAlignment="Top">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LabelQuality}" FontSize="14" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10"/>
                                <ComboBox x:Name="CboDownloadFormat" SelectedIndex="0" Padding="10,8" FontSize="14" Margin="0,0,0,20" Height="40">
                                    <ComboBoxItem Content="{DynamicResource FmtVideoMp4}" Tag="VIDEO_MP4"/>
                                    <ComboBoxItem Content="{DynamicResource FmtVideoMkv}" Tag="VIDEO_MKV"/>
                                    <ComboBoxItem Content="{DynamicResource FmtVideoWebm}" Tag="VIDEO_WEBM"/>
                                    <Separator IsEnabled="False"/>
                                    <ComboBoxItem Content="{DynamicResource FmtAudioWebm}" Tag="AUDIO_WEBM"/>
                                    <ComboBoxItem Content="{DynamicResource FmtAudioWav}" Tag="AUDIO_WAV"/>
                                    <ComboBoxItem Content="{DynamicResource FmtAudioFlac}" Tag="AUDIO_FLAC"/>
                                    <Separator IsEnabled="False"/>
                                    <ComboBoxItem Content="{DynamicResource FmtAudioMp3}" Tag="AUDIO_MP3"/>
                                    <ComboBoxItem Content="{DynamicResource FmtAudioM4a}" Tag="AUDIO_M4A"/>
                                </ComboBox>

                                <CheckBox x:Name="ChkAddMetadata" Content="{DynamicResource ChkMetadata}" IsChecked="True" Margin="0,0,0,20" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>

                                <TextBlock Text="{DynamicResource LabelOutputFolder}" FontSize="14" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtDownloadPath" IsReadOnly="True" Height="40" VerticalContentAlignment="Center" Padding="5,0"/>
                                    <Button Grid.Column="1" Content="{DynamicResource BtnBrowse}" Click="BtnBrowseDownload_Click" Margin="10,0,0,0" Padding="15,0"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="BtnBackToInput" Click="BtnBack_Click" Content="{DynamicResource BtnCancel}" Margin="0,0,10,0" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextSecondary}" Width="100" Height="45"/>
                                    <Button Grid.Column="1" x:Name="BtnDownloadAction" Click="BtnDownload_Click" Content="{DynamicResource BtnDownload}" Style="{StaticResource BtnPrimary}" Height="45" FontSize="16"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- CONVERTER TAB (Simplified Wizard) -->
            <TabItem Header="{DynamicResource TabConverter}">
                 <Grid Margin="0,20">
                    <!-- STEP 1: DROP -->
                    <Grid x:Name="ViewConverterInput" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border BorderBrush="{DynamicResource BorderColor}" 
                                BorderThickness="2" 
                                CornerRadius="15" 
                                AllowDrop="True" 
                                Drop="Border_Drop"
                                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                                Background="{DynamicResource CardBackground}"
                                Cursor="Hand"
                                Width="600"
                                Height="300">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect">
                                         <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#000000" Opacity="0.1"/>
                                         </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                         <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource CardHoverBackground}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#xE7C9;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="{DynamicResource AccentColor}" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                                <TextBlock Text="{DynamicResource MsgDropFile}" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBlock Text="{DynamicResource LabelOrBrowse}" FontSize="16" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- STEP 2: OPTIONS -->
                    <Grid x:Name="ViewConverterOptions" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Style="{StaticResource CardStyle}" Width="500">
                             <StackPanel>
                                <TextBlock Text="{DynamicResource HeaderConversion}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#252525" CornerRadius="8" Width="50" Height="50" Margin="0,0,15,0">
                                        <TextBlock Text="&#xE7C9;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                         <TextBlock Text="{DynamicResource LabelInputFile}" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                                         <TextBlock x:Name="TxtInputFile" Text="filename.mp4" FontSize="15" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="{DynamicResource LabelQuality}" FontSize="14" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10"/>
                                <ComboBox x:Name="CboConvertFormat" SelectedIndex="0" Padding="10,8" FontSize="14" Margin="0,0,0,20" Height="40">
                                    <ComboBoxItem Content="MP4 (Video)" Tag="mp4"/>
                                    <ComboBoxItem Content="MKV (Video)" Tag="mkv"/>
                                    <ComboBoxItem Content="AVI (Video)" Tag="avi"/>
                                    <ComboBoxItem Content="MP3 (Audio)" Tag="mp3"/>
                                    <ComboBoxItem Content="WAV (Audio)" Tag="wav"/>
                                    <ComboBoxItem Content="FLAC (Audio)" Tag="flac"/>
                                </ComboBox>

                                <TextBlock Text="{DynamicResource LabelOutputFolder}" FontSize="14" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtConvertPath" IsReadOnly="True" Height="40" VerticalContentAlignment="Center" Padding="5,0"/>
                                    <Button Grid.Column="1" Content="{DynamicResource BtnBrowse}" Click="BtnBrowseConvert_Click" Margin="10,0,0,0" Padding="15,0"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Click="BtnBackConverter_Click" Content="{DynamicResource BtnCancel}" Margin="0,0,10,0" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextSecondary}" Width="100" Height="45"/>
                                    <Button Grid.Column="1" x:Name="BtnConvertAction" Click="BtnConvert_Click" Content="{DynamicResource BtnConvert}" Style="{StaticResource BtnPrimary}" Height="45"/>
                                </Grid>
                                
                                <!-- Progress Bar for Conversion -->
                                <StackPanel Margin="0,20,0,0">
                                    <ProgressBar x:Name="PbStatusConvert" Height="4" Margin="0,0,0,10" />
                                    <TextBlock x:Name="TxtStatusConvert" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- SOUNDCLOUD TAB -->
            <TabItem Header="{DynamicResource TabSoundCloud}">
                <Grid>
                     <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="&#xE93E;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#FF5500" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                        <TextBlock Text="{DynamicResource MsgSoundCloud}" FontSize="18" TextAlignment="Center" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,10"/>
                        <Button Content="{DynamicResource LinkLucida}" Click="BtnLucida_Click" Style="{StaticResource BtnPrimary}" Width="200"/>
                        <TextBlock Text="{DynamicResource MsgSoundCloudNote}" FontSize="14" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,15,0,40"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- METADATA TAB (Viewer Mode) -->
            <TabItem Header="{DynamicResource TabMetadata}">
                <Grid Margin="0,20">
                    <!-- STEP 1: LOAD FILE (with Drag & Drop) -->
                    <Grid x:Name="ViewMetadataInput" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border BorderBrush="{DynamicResource BorderColor}" 
                                BorderThickness="2" 
                                CornerRadius="15" 
                                AllowDrop="True" 
                                Drop="Border_MetadataDrop" 
                                MouseLeftButtonDown="Border_MetadataMouseLeftButtonDown"
                                Background="{DynamicResource CardBackground}"
                                Cursor="Hand"
                                Width="600"
                                Height="300">
                             <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect">
                                         <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#000000" Opacity="0.1"/>
                                         </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                         <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource CardHoverBackground}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="{DynamicResource AccentColor}" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                                <TextBlock Text="{DynamicResource LabelDropMeta}" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBlock Text="{DynamicResource LabelOrOpenMeta}" FontSize="16" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- STEP 2: VIEW TAGS -->
                    <Grid x:Name="ViewMetadataEditor" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="900">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- File Info Side -->
                        <Border Style="{StaticResource CardStyle}" VerticalAlignment="Top">
                             <StackPanel>
                                <Border Background="#252525" CornerRadius="8" Height="100" Margin="0,0,0,15">
                                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}"/>
                                </Border>
                                <TextBlock Text="{DynamicResource HeaderFileInfo}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="TxtMetaFileName" Text="filename.mp3" TextWrapping="Wrap" FontSize="15" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtMetaFileSize" Text="0.0 MB" Foreground="{DynamicResource TextSecondary}" FontSize="13"/>
                                
                                <Button Click="BtnBackMetadata_Click" Content="{DynamicResource BtnCloseFile}" Margin="0,20,0,0" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextSecondary}" Height="40"/>
                            </StackPanel>
                        </Border>

                        <!-- ReadOnly Fields -->
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                                <ItemsControl x:Name="IcMetadataSections">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander Header="{Binding Title}" IsExpanded="True" Margin="0,0,0,10" BorderBrush="{DynamicResource BorderColor}" Background="{DynamicResource CardBackground}" Foreground="{DynamicResource TextPrimary}">
                                                <ItemsControl ItemsSource="{Binding Items}" Margin="10,5,0,5">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="150"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Key}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondary}" TextWrapping="Wrap"/>
                                                                <TextBox Grid.Column="1" Text="{Binding Value}" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
            <!-- SETTINGS OVERLAY VIEW (PREMIUM REDESIGN) -->
            <Grid x:Name="ViewSettings" Visibility="Collapsed" Grid.Row="0" Grid.RowSpan="3" Background="#BB000000" Panel.ZIndex="1000">
                <Border Width="700" VerticalAlignment="Center" HorizontalAlignment="Center" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="Black"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Premium Header -->
                        <Border Grid.Row="0" Padding="30,25" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="{DynamicResource AccentColor}" Margin="0,0,15,0"/>
                                    <TextBlock Text="{DynamicResource HeaderSettings}" FontSize="24" FontWeight="Light" Foreground="{DynamicResource TextPrimary}"/>
                                </StackPanel>
                                <Button HorizontalAlignment="Right" Click="BtnCloseSettings_Click" Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondary}" FontSize="16" Width="40" Height="40" Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Content Area -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                            <StackPanel>
                                
                                <!-- Appearance Section -->
                                <TextBlock Text="{DynamicResource HeaderAppearance}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10" Opacity="0.8"/>
                                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,25">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="40" Height="40" Background="#15FFFFFF" CornerRadius="20" Margin="0,0,15,0">
                                            <TextBlock Text="&#xE790;" FontFamily="Segoe MDL2 Assets" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{DynamicResource LabelAppTheme}" FontSize="16" Foreground="{DynamicResource TextPrimary}"/>
                                            <TextBlock Text="{DynamicResource LabelAppThemeDesc}" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                                        </StackPanel>
                                        <ComboBox Grid.Column="2" x:Name="CboTheme" SelectionChanged="CboTheme_SelectionChanged" Width="180" Height="35" Padding="10,0" VerticalContentAlignment="Center">
                                            <ComboBoxItem Content="{DynamicResource OptThemeAuto}" Tag="Auto"/>
                                            <ComboBoxItem Content="{DynamicResource OptThemeNavy}" Tag="Navy"/>
                                            <ComboBoxItem Content="{DynamicResource OptThemeSky}" Tag="Sky"/>
                                        </ComboBox>
                                    </Grid>
                                </Border>

                                <!-- Updates Section -->
                                <TextBlock Text="{DynamicResource HeaderUpdates}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10" Opacity="0.8"/>
                                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,25">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="40" Height="40" Background="#15FFFFFF" CornerRadius="20" Margin="0,0,15,0">
                                                <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{DynamicResource LabelAutoChecks}" FontSize="16" Foreground="{DynamicResource TextPrimary}"/>
                                                <TextBlock Text="{DynamicResource LabelAutoChecksDesc}" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                                            </StackPanel>
                                            <CheckBox Grid.Column="2" x:Name="ChkUpdatesStartup" VerticalAlignment="Center" Checked="ChkUpdatesStartup_Changed" Unchecked="ChkUpdatesStartup_Changed">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                </CheckBox.LayoutTransform>
                                            </CheckBox>
                                        </Grid>
                                        <Separator Background="{DynamicResource BorderColor}" Margin="55,0,0,15" Opacity="0.5"/>
                                        <Grid Margin="55,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                 <TextBlock Text="{DynamicResource LabelCurrentVersion}" Foreground="{DynamicResource TextSecondary}" Margin="0,0,5,0"/>
                                                 <TextBlock x:Name="TxtUpdateStatus" Text="Checking..." Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" x:Name="BtnCheckUpdates" Click="BtnCheckUpdates_Click" Content="{DynamicResource BtnCheckNow}" Padding="15,6" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- About Section (Redesigned) -->
                                <TextBlock Text="{DynamicResource HeaderAbout}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,10" Opacity="0.8"/>
                                <Border Style="{StaticResource CardStyle}" Padding="0" BorderThickness="0">
                                    <Grid>
                                        <Border CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#4A00E0" Offset="0"/>
                                                    <GradientStop Color="#8E2DE2" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Grid Margin="25">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="Soffizlly" Foreground="White" FontWeight="Bold" FontSize="22"/>
                                                    <TextBlock Text="{DynamicResource LabelSubtitle}" Foreground="#DDFFFFFF" FontSize="14" Margin="0,2,0,15"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Background="#33FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                                                            <TextBlock x:Name="TxtVersion" Text="v0.0.0" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                        </Border>
                                                        <TextBlock Text="{DynamicResource LabelRights}" Foreground="#AAFFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Button Grid.Column="1" Click="BtnFeedback_Click" Background="#22FFFFFF" BorderThickness="0" Foreground="White" Width="50" Height="50"  ToolTip="Report Issue / Feedback" VerticalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                                                                            <TextBlock Text="&#xE939;" FontFamily="Segoe MDL2 Assets" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        
        <Border Grid.Row="2" Padding="10,5" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtLogs" Text="{DynamicResource StatusReady}" Foreground="{DynamicResource TextSecondary}" FontSize="12" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Margin="5,0"/>
                
                <Button Grid.Column="1" x:Name="BtnShowLogs" Click="BtnShowLogs_Click" Content="&#xE81C;" FontFamily="Segoe MDL2 Assets" ToolTip="Show Full Logs" Background="Transparent" BorderThickness="0" Width="30" Height="25" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
