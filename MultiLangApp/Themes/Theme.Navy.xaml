<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Navy Theme (Dark) -->
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="AppBackground" Color="#0D1117"/> <!-- GitHub Dark Dimmed style / Deep Navy -->
    <SolidColorBrush x:Key="CardBackground" Color="#161B22"/>
    <SolidColorBrush x:Key="CardHoverBackground" Color="#21262D"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#8B949E"/>
    <SolidColorBrush x:Key="TextContrast" Color="#FFFFFF"/> <!-- For buttons with accent color -->
    
    <!-- Accent -->
    <SolidColorBrush x:Key="AccentColor" Color="#1F6FEB"/> <!-- Blue -->
    <SolidColorBrush x:Key="AccentHover" Color="#388BFD"/>
    
    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#21262D"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#30363D"/>
    
    <!-- Borders -->
    <SolidColorBrush x:Key="BorderColor" Color="#30363D"/>
    <SolidColorBrush x:Key="DividerColor" Color="#21262D"/>
    
    <!-- Status -->
    <SolidColorBrush x:Key="SuccessColor" Color="#2EA043"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#DA3633"/>
    <SolidColorBrush x:Key="WarningColor" Color="#D29922"/>
</ResourceDictionary>
