    <system:String x:Key="MsgAlphaTitle">Versión Alpha - Solo Pruebas</system:String>
    <system:String x:Key="MsgAlphaBody">Advertencia: Esta es una versión ALPHA.&#x0a;&#x0a;Puede contener errores o funciones incompletas.&#x0a;Si encuentras algún error, por favor copia los registros (Show Logs) y envíalos a @soffizlly en Discord.</system:String>

    <!-- Common -->
    <system:String x:Key="MsgProcessing">Trabajando...</system:String>
    <system:String x:Key="MsgSuccess">Listo</system:String>
