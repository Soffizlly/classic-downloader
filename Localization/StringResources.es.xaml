    <system:String x:Key="BtnChangeCover">Cambiar Portada...</system:String>
    <system:String x:Key="MsgMetadataSaved">¡Etiquetas Guardadas!</system:String>
    
    <!-- Converter -->
    <system:String x:Key="LabelInputFile">Archivo</system:String>
    <system:String x:Key="BtnConvert">Convertir</system:String>
    <system:String x:Key="MsgDropFile">Soltar archivo</system:String>

    <!-- SoundCloud -->
    <system:String x:Key="MsgSoundCloud">Para la mejor calidad posible en SoundCloud, recomendamos:</system:String>
    <system:String x:Key="MsgSoundCloudNote">(Solo para SoundCloud)</system:String>
    <system:String x:Key="LinkLucida">Lucida.to</system:String>

    <system:String x:Key="LabelAlternatives">Alternativas y Herramientas Útiles:</system:String>
    <system:String x:Key="LinkCobalt">Cobalt Tools</system:String>
    <system:String x:Key="LinkConverter">FreeConvert (Sin Anuncios)</system:String>
    
    <!-- Formats -->
    <system:String x:Key="FmtVideoMp4">Video (MP4) - Mejor Calidad</system:String>
    <system:String x:Key="FmtVideoMkv">Video (MKV) - Mejor Calidad</system:String>
    <system:String x:Key="FmtVideoWebm">Video (WEBM) - Mejor Calidad</system:String>
    <system:String x:Key="FmtAudioWebm">Audio (WEBM) - Mejor Calidad</system:String>
    <system:String x:Key="FmtAudioWav">Audio (WAV) - Sin Pérdida</system:String>
    <system:String x:Key="FmtAudioFlac">Audio (FLAC) - Sin Pérdida</system:String>
