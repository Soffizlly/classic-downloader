    <system:String x:Key="MsgFfmpegNotFound">No se encontró ffmpeg.exe.</system:String>
    <system:String x:Key="MsgCanceled">Cancelado</system:String>
    <system:String x:Key="MsgCanceledLog">CANCELADO POR EL USUARIO.</system:String>
    <system:String x:Key="MsgErrorPrefix">ERROR:</system:String>

