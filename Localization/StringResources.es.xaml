    <system:String x:Key="StatusReady">Listo</system:String>
    
    <!-- Tabs -->
    <system:String x:Key="TabDownloader">Descargador</system:String>
    <system:String x:Key="TabConverter">Convertidor</system:String>
    <system:String x:Key="TabSoundCloud">SoundCloud</system:String>

    <!-- Downloader -->
    <system:String x:Key="LabelUrl">URL</system:String>
    <system:String x:Key="BtnDownload">Descargar</system:String>
    <system:String x:Key="ChkMetadata">Metadatos</system:String>
    <system:String x:Key="LabelQuality">Calidad / Formato</system:String>
    <system:String x:Key="LabelOutputFolder">Carpeta de Salida:</system:String>
